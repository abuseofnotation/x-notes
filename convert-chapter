rm -rf _chapters
mkdir _chapters

# insert heading
echo $2 >> _chapters/$1.md
echo "====" >> _chapters/$1.md
echo "" >> _chapters/$1.md

# insert the first lines of all fragments, serving as a heading


for file in $1/*
do 
  spellchecker -f $file --dictionaries _other/dictionary.txt
done 

for file in $1/*
do 
  sed '1q' $file | perl -p -e 's/\n/, /' >> _chapters/$1.md
done 

echo "" >> _chapters/$1.md
echo "" >> _chapters/$1.md

# insert text
for file in $1/*
do 
  sed '1d' $file >> _chapters/$1.md
done 




